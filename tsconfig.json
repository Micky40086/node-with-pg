{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@root/*": ["*"],
            "@config/*": ["./config/*"],
            "@api/*": ["./src/api/*"],
            "@routes/*": ["./src/routes/*"]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "config/*",
    ],
}